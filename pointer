#include <stdio.h>
int main() {
    int num,sum=0;
    int *np;
    scanf("%d",&num);
    int n[num];
    for(int i=0;i<num;i++){
        scanf("%d",&n[i]);
    }
    for(int i=0;i<num;i++){
       np= &n[i] ;
       sum = sum+n[i];
    }
    printf("%d",sum);
}
