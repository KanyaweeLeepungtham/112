include <stdio.h>

int main() {
    int a=42;
    float b=3.14;
    char word='A';
    int *ap;
    float *bp;
    char *wp;
    ap = &a;
    bp = &b;
    wp = &word;

    printf("int: %d at %p\n float: %f at %p\n char: %c at %p",a,b,word ,(void*)ap, (void*)bp, (void*)wp);
    return 0;
}


2.
#include <stdio.h>
int main() {
    int num,sum=0;
    int *np;
    scanf("%d",&num);
    int n[num];
    for(int i=0;i<num;i++){
        scanf("%d",&n[i]);
    }
    for(int i=0;i<num;i++){
       np= *n[i] ;
       sum = sum+np;
    }
    printf("%d",sum);
}
3.#include<stdio.h>
int main(){
    int num;
    scanf("%d",&num);
    int n[num];
    for(int i=0;i<num;i++){
        scanf("%d",&n[i]);
        
    }
    int *np=n;
    int max = *np;
    int sec = -1000000;
    for(np = n; np<n+num ;np++){
        if(*np > max){
            sec=max;
            max=*np;
        }
        else if(*np>sec && *np<max){
            sec = *np;
        }
    }
    printf("Second largest = %d",sec);
}
