#include <stdio.h>

int main() {
    int a;
    float b;
    char c;
    int *ap;
    float *bp;
    char *cp;

    scanf("%d %f %c", &a, &b, &c);

    ap = &a;
    bp = &b;
    cp = &c;

    printf("%p %p %p\n", (void*)ap, (void*)bp, (void*)cp);
    return 0;
}

2.
#include <stdio.h>
int main() {
    int num,sum=0;
    int *np;
    scanf("%d",&num);
    int n[num];
    for(int i=0;i<num;i++){
        scanf("%d",&n[i]);
    }
    for(int i=0;i<num;i++){
       np= &n[i] ;
       sum = sum+n[i];
    }
    printf("%d",sum);
}

อย่า
#include <stdio.h>
#include <limits.h>

int main() {
    int num;
    scanf("%d", &num);
    int n[num];
    for (int i = 0; i < num; i++) {
        scanf("%d", &n[i]);
    }

    int *np = n; // pointer ชี้ไปที่ array
    int max = INT_MIN, sec = INT_MIN;

    for (int i = 0; i < num; i++) {
        if (*(np + i) > max) {
            sec = max;
            max = *(np + i);
        } else if (*(np + i) > sec && *(np + i) < max) {
            sec = *(np + i);
        }
    }

    if (sec == INT_MIN)
        printf("No second largest number\n");
    else
        printf("Second largest = %d\n", sec);

    return 0;
}
