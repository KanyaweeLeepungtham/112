menu = 1
num = 1
total = 0
while menu != 0 :
    menu = int(input())
    if menu == 0 :
        break
    num = int(input())
    if menu == 1 :
        sell = 25
    elif menu == 2 :
        sell = 30
    else :
        sell = 35 
    total = total + (sell * num)
if total >= 300 :
    total = total * 0.95
    total = round(total)
if num >= 10 :
    total = total * 0.9
    total = round(total)
print(total)